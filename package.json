{
  "name": "movie-streamer",
  "version": "1.1.0",
  "description": "Cross-platform movie streaming application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder --win --linux"
  },
  "keywords": [
    "electron",
    "movie",
    "streaming",
    "torrent"
  ],
  "author": {
    "name": "Santi Rivera",
    "email": "santirivera92@gmail.com"
  },
  "homepage": "https://github.com/SantiagoRivera92/electron-movie-streamer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/node": "25.0.3",
    "typescript": "5.9.3",
    "tailwindcss": "4.1.18",
    "postcss": "8.5.6"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "rimraf": "^5.0.5",
    "webtorrent": "^2.8.5",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.562.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "express": "5.2.1"
  },
  "build": {
    "appId": "com.moviestreamer.app",
    "productName": "MovieStreamer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "torrent-worker.js",
      "preload.js",
      "index.html",
      "icon.png",
      "css/**",
      "js/**",
      "img/**",
      "node_modules/",
      "package.json"
    ],
    "win": {
      "icon": "icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "executableArgs": [
        "--no-sandbox"
      ],
      "category": "AudioVideo",
      "executableName": "movie-streamer",
      "artifactName": "${name}_${version}_${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
